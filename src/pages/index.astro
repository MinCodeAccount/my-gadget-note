				font-family: 'Hiragino Maru Gothic ProN', 'Rounded M+ 1c', 'Zen Maru Gothic', 'Meiryo', sans-serif;
			}
			.hero {
				background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%);
				border-radius: 20px;
				padding: 3rem 2rem;
				text-align: center;
				color: #fff;
				box-shadow: 0 10px 20px rgba(255, 154, 158, 0.3);
				margin-bottom: 3rem;
				animation: float 6s ease-in-out infinite;
			}
			@keyframes float {
				0% { transform: translateY(0px); }
				50% { transform: translateY(-10px); }
				100% { transform: translateY(0px); }
			}
			.hero h1 {
				margin: 0;
				font-size: 2.5em;
				color: white;
				text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
			}
			.hero p {
				font-size: 1.2em;
				margin-top: 1rem;
				color: white;
				text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
				opacity: 0.95;
			}
			
			.features {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 2rem;
				margin-bottom: 3rem;
			}
			.card {
				background: #fff;
				border: 4px solid #bdf1f6;
				border-radius: 15px;
				padding: 2rem;
				text-align: center;
				transition: transform 0.3s, box-shadow 0.3s;
				text-decoration: none;
				color: inherit;
				display: block;
			}
			a.card:hover {
				transform: translateY(-5px) scale(1.02);
				box-shadow: 0 8px 15px rgba(189, 241, 246, 0.5);
				border-color: #8be0e8;
			}
			.card h2 {
				color: #555;
				margin-top: 0;
			}
			.card p {
				color: #777;
			}
			.card.yellow {
				border-color: #fff3b0;
			}
			a.card.yellow:hover {
				box-shadow: 0 8px 15px rgba(255, 243, 176, 0.5);
				border-color: #ffe45e;
			}
			
			.category-list {
				list-style: none;
				padding: 0;
				margin: 1.5rem 0 0 0;
				display: flex;
				flex-direction: column;
				gap: 0.8rem;
			}
			.category-list li a {
				display: block;
				background: #f4fdff;
				padding: 0.8rem;
				border-radius: 10px;
				text-decoration: none;
				color: #333;
				font-weight: bold;
				transition: all 0.2s;
				border: 2px solid transparent;
			}
			.category-list li a:hover {
				background: #fff;
				border-color: #8be0e8;
				transform: translateX(5px);
				box-shadow: 0 4px 8px rgba(139, 224, 232, 0.3);
			}
			
			.recent-posts {
				background: #fdfbf7;
				padding: 2rem;
				border-radius: 15px;
				border: 2px dashed #ffc6c7;
			}
			.recent-posts h2 {
				color: #ff9a9e;
				text-align: center;
				margin-top: 0;
				font-size: 1.8em;
			}
			.post-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			.post-list li {
				margin-bottom: 1rem;
				background: #fff;
				border-radius: 10px;
				box-shadow: 0 4px 6px rgba(0,0,0,0.05);
				transition: all 0.2s;
			}
			.post-list li:hover {
				transform: translateX(5px);
				box-shadow: 0 6px 10px rgba(0,0,0,0.1);
			}
			.post-list a {
				text-decoration: none;
				color: #333;
				display: flex;
				align-items: center;
				font-weight: bold;
				padding: 1rem;
				gap: 1.5rem;
			}
			.post-thumbnail {
				width: 100px;
				height: 70px;
				object-fit: cover;
				border-radius: 8px;
			}
			.post-content {
				display: flex;
				flex-direction: column;
				gap: 0.3rem;
				flex-grow: 1;
			}
			.post-title {
				font-size: 1.1em;
				font-weight: bold;
				color: #333;
			}
			.post-date {
				color: #999;
				font-size: 0.9em;
				font-weight: normal;
			}
            @media (max-width: 720px) {
                .post-list a {
                    flex-direction: column;
                    align-items: flex-start;
                    gap: 1rem;
                }
				.post-thumbnail {
					width: 100%;
					height: auto;
				}
                .hero h1 {
                    font-size: 2em;
                }
            }
		</style>
