---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const recentPosts = posts.slice(0, 3);
const animePosts = posts.filter(post => post.data.category === 'anime').slice(0, 3);
const investmentPosts = posts.filter(post => post.data.category === 'investment').slice(0, 3);
const dailyPosts = posts.filter(post => post.data.category === 'daily').slice(0, 3);
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={`Blog - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			body {
				background-color: #f9f9f9;
			}
			main {
				max-width: 800px;
				margin: 0 auto;
				padding: 2rem;
				font-family: 'Hiragino Maru Gothic ProN', 'Rounded M+ 1c', 'Zen Maru Gothic', 'Meiryo', sans-serif;
			}
			.blog-header {
				text-align: center;
				margin-bottom: 3rem;
				padding: 2rem;
				background: linear-gradient(135deg, #bdf1f6 0%, #fff 100%);
				border-radius: 15px;
				border: 2px dashed #8be0e8;
			}
			.blog-header h1 {
				margin: 0;
				color: #555;
			}
			.category-section {
				background: #fff;
				padding: 2rem;
				border-radius: 15px;
				border: 4px solid #fecfef;
				margin-bottom: 3rem;
				box-shadow: 0 4px 10px rgba(0,0,0,0.05);
			}
			.category-section.anime { border-color: #bdf1f6; }
			.category-section.investment { border-color: #fff3b0; }
			.category-section.daily { border-color: #ffc6c7; }
			
			.section-title {
				display: flex;
				justify-content: space-between;
				align-items: center;
				border-bottom: 2px dashed #eee;
				padding-bottom: 1rem;
				margin-top: 0;
				margin-bottom: 1.5rem;
			}
			.section-title h2 {
				margin: 0;
				font-size: 1.8em;
				color: #333;
			}
			.section-title a {
				text-decoration: none;
				color: #ff9a9e;
				font-weight: bold;
				transition: color 0.2s;
				padding: 0.5rem 1rem;
				background: #fff0f1;
				border-radius: 20px;
			}
			.section-title a:hover {
				color: #ff7479;
				background: #ffe3e5;
			}
			
			.post-list {
				list-style: none;
				padding: 0;
				margin: 0;
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}
			.post-list li {
				background: #fdfbf7;
				border-radius: 10px;
				transition: all 0.2s;
				border: 1px solid #eee;
			}
			.post-list li:hover {
				transform: translateX(5px);
				box-shadow: 0 4px 8px rgba(0,0,0,0.05);
				border-color: #ffc6c7;
			}
			.post-list a {
				text-decoration: none;
				color: #333;
				display: flex;
				align-items: center;
				padding: 1rem;
				gap: 1.5rem;
			}
			.post-thumbnail {
				width: 120px;
				height: 80px;
				object-fit: cover;
				border-radius: 8px;
			}
			.post-content {
				display: flex;
				flex-direction: column;
				gap: 0.4rem;
				flex-grow: 1;
			}
			.post-title {
				font-size: 1.1em;
				font-weight: bold;
				color: #333;
				line-height: 1.3;
			}
			.post-date {
				color: #999;
				font-size: 0.9em;
			}
			@media (max-width: 720px) {
				.post-list a {
					flex-direction: column;
					align-items: flex-start;
					gap: 1rem;
				}
				.post-thumbnail {
					width: 100%;
					height: auto;
					aspect-ratio: 16/9;
				}
			}
		</style>
	</head>
	<body>
